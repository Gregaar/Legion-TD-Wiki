{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES2019", "DOM"],
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": false,
    "strict": true,
    "strictNullChecks": true,
    "target": "ES2019",
    "typeRoots": ["./@types", "./node_modules/@types"]
  },
  "exclude": ["node_modules", "**/*.spec.ts", "./src/test-setup"]
}