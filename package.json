{
  "name": "legion-td",
  "scripts": {
    "install:backend": "cd ./backend && npm ci",
    "install:data-import": "cd ./data-import && npm ci",
    "install:frontend": "cd ./frontend && npm ci",
    "start-data-import-service": "cd data-import && npm run build && npm run start",
    "postinstall": "run-s install:*",
    "start": "cd backend && npm run start",
    "heroku-postbuild": "npm run install:backend && npm run install:data-import && npm run start-data-import-service"
  },
  "dependencies": {
    "commitizen": "^4.1.2",
    "cz-conventional-changelog": "^3.2.0",
    "husky": "^4.2.5",
    "npm-run-all": "^4.1.5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "devDependencies": {}
}
